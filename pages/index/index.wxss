/* pages/index/index.wxss */

page {
    background: #79d397;
    position: relative;
}

.title {
    padding-top: 100rpx;
    width: 500rpx;
    text-align: center;
    font-size: 60rpx;
    font-family: PingFang-SC-Bold;
    margin: 0 auto;
    position: relative;
    padding-bottom: 40rpx;
    color: rgba(255, 255, 255, 1);
    line-height: 90rpx;
    text-shadow: 2rpx 3rpx 6rpx rgba(121, 211, 151, 1);
}

.logo {
    border-radius: 300rpx;
    background: rgba(0, 0, 0, .3);
    width: 80%;
    padding: 40rpx;
    margin: 200rpx auto 0 auto;
    overflow: hidden;
    color: #fff;
    line-height: 100rpx;
    font-size: 28rpx;
    text-align: center;
}

.logo image {
    display: block;
    width: 300rpx;
    height: 300rpx;
}

.bg {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 750rpx;
    height: 400rpx;
}

.bnt_box {
    bottom: 10vh;
    position: fixed;
    left: 0;
    width: 100%;
    z-index: 9;
}

.bnt {
    margin: 0 auto;
    line-height: 80rpx;
    text-align: center;
    font-weight: 700;
    background: #fff;
    border-radius: 10rpx;
    overflow: hidden;
    width: 200rpx;
    height: 80rpx;
    font-size: 32rpx;
    color: #79d397;
}